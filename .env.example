# Theglocal Environment Variables
# Copy this file to .env.local and fill in the values

# SUPABASE (Required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# APPLICATION
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# SECURITY
SUPER_ADMIN_EMAILS=admin@theglocal.com
POLL_VOTING_SECRET=your-secure-secret-min-32-chars
CRON_SECRET=your-secure-cron-secret

# PAYMENT GATEWAYS
RAZORPAY_KEY_ID=rzp_test_xxxxx
RAZORPAY_KEY_SECRET=your_secret
RAZORPAY_WEBHOOK_SECRET=your_webhook_secret
NEXT_PUBLIC_RAZORPAY_KEY_ID=rzp_test_xxxxx
PAYPAL_CLIENT_ID=your_paypal_id
PAYPAL_CLIENT_SECRET=your_paypal_secret
PAYPAL_WEBHOOK_ID=your_webhook_id

# EXTERNAL APIS
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_maps_key
GOOGLE_NEWS_API_KEY=your_news_key
NEXT_PUBLIC_GIPHY_API_KEY=your_giphy_key
NEXT_PUBLIC_GOOGLE_ADSENSE_PUB_ID=ca-pub-xxxxx

# EMAIL
RESEND_API_KEY=re_xxxxx
RESEND_FROM_EMAIL=Theglocal <noreply@theglocal.com>

# MONITORING
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
SENTRY_AUTH_TOKEN=your_token
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project

# VERCEL (CI/CD)
VERCEL_TOKEN=your_token
VERCEL_ORG_ID=your_org_id
VERCEL_PROJECT_ID=your_project_id

# OPTIONAL
REDIS_URL=redis://localhost:6379
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/xxx/yyy/zzz
