{
  "name": "theglocal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest __tests__/unit",
    "test:integration": "jest __tests__/integration",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run check:a11y",
    "test:e2e": "playwright test",
    "test:a11y": "jest __tests__/accessibility",
    "audit:a11y": "node scripts/lighthouse-audit.js",
    "check:a11y": "npm run test:a11y && npm run audit:a11y",
    "test:report": "npm run test:coverage && npm run test:e2e && npm run audit:a11y",
    "check:circular": "madge --circular --extensions ts,tsx app lib components",
    "check:circular:json": "madge --circular --extensions ts,tsx --json app lib components",
    "visualize:deps": "madge --extensions ts,tsx --image deps-graph.svg app lib components",
    "fix:eslint": "node scripts/fix-eslint-warnings.js",
    "analyze": "ANALYZE=true next build",
    "perf:profile": "node --inspect-brk ./node_modules/.bin/next build",
    "perf:load": "k6 run __tests__/load/load-test.js",
    "perf:stress": "k6 run __tests__/load/stress-test.js",
    "db:start": "supabase start",
    "db:stop": "supabase stop",
    "db:reset": "supabase db reset",
    "db:migrate": "supabase db push",
    "generate-types": "supabase gen types typescript --local > lib/types/database.types.ts",
    "prepare": "husky"
  },
